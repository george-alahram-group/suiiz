<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Suiiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryLightColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>

        <!-- Status bar -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/foreground_color</item>

        <!-- Customize your theme here -->

    </style>

    <!-- ****************************************** Splash_Screen -->
    <style name="splash_screen_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
    </style>

    <!--  ****************************************** Spinner  -->
    <style name="spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownAnchor">@id/center</item>
    </style>

</resources>