<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:scrollbars="none"
    tools:context=".ui.fragments.SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginTop="64dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/lit_s_get_started"
            android:textAllCaps="true"
            android:textColor="@color/primaryTextColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/tv2"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/tv2"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_an_account_to_future"
            android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/textField"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/textField"
            app:layout_constraintTop_toBottomOf="@+id/tv" />

        <LinearLayout
            android:id="@+id/textField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv2"
            app:layout_goneMarginBottom="16dp">

            <LinearLayout
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:background="@drawable/inputs_normal_bacground_left"
                    android:src="@drawable/ic_person"
                    app:tint="@color/secondaryTextColor"
                    android:contentDescription="@string/app_name" />

                <!-- TODO : change background to dark to match the theme -->
                <EditText
                    android:id="@+id/etName"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="12"

                    android:background="@drawable/inputs_normal_background_right"
                    android:hint="@string/full_name"
                    android:inputType="textPersonName"
                    android:textColor="@color/secondaryTextColor"
                    android:textColorHint="#BFFFFFFF"
                    tools:ignore="TextFields" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:background="@drawable/inputs_differ_background_left"
                    android:src="@drawable/ic_location"
                    app:tint="@color/secondaryTextColor"
                    android:contentDescription="@string/app_name" />

                <!-- TODO : change background to dark to match the theme -->
                <Spinner
                    android:id="@+id/spCountry"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="12"
                    android:background="@drawable/inputs_normal_background_right"
                    android:textColor="@color/secondaryTextColor" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCountryCode"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:text="+02"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAlignment="gravity"
                    android:textColor="@color/secondaryTextColor"
                    android:background="@drawable/inputs_differ_background_left" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="12"
                    android:background="@drawable/inputs_normal_background_right"
                    android:hint="@string/country_code"
                    android:autofillHints="@array/countries"
                    android:importantForAutofill="yes"
                    android:inputType="textPersonName"
                    android:textColor="@color/secondaryTextColor"
                    android:textColorHint="#BFFFFFFF"
                    tools:ignore="TextFields" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:background="@drawable/inputs_normal_bacground_left"
                    android:src="@drawable/ic_email"
                    app:tint="@color/secondaryTextColor"
                    android:contentDescription="@string/app_name" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="12"
                    android:background="@drawable/inputs_normal_background_right"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/secondaryTextColor"
                    android:textColorHint="#BFFFFFFF"
                    tools:ignore="TextFields" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:background="@drawable/inputs_normal_bacground_left"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/secondaryTextColor"
                    android:contentDescription="@string/app_name" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="12"
                    android:drawableEnd="@drawable/ic_show"
                    android:drawableTint="@color/secondaryTextColor"
                    android:drawablePadding="16dp"
                    android:background="@drawable/inputs_normal_background_right"
                    android:hint="@string/password"
                    android:autofillHints="@array/countries"
                    android:importantForAutofill="yes"
                    android:inputType="textPassword"
                    android:textColor="@color/secondaryTextColor"
                    android:textColorHint="#BFFFFFFF"
                    tools:ignore="TextFields" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:background="@drawable/inputs_normal_bacground_left"
                    android:src="@drawable/ic_lock"
                    app:tint="@color/secondaryTextColor"
                    android:contentDescription="@string/app_name" />

                <EditText
                    android:id="@+id/etPassWordConfirm"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="12"
                    android:drawableEnd="@drawable/ic_show"
                    android:drawableTint="@color/secondaryTextColor"
                    android:drawablePadding="16dp"
                    android:background="@drawable/inputs_normal_background_right"
                    android:hint="@string/confirm_password"
                    android:inputType="textPersonName"
                    android:textColor="@color/secondaryTextColor"
                    android:textColorHint="#BFFFFFFF"
                    tools:ignore="TextFields" />
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="@string/create"
            android:textColor="@color/secondaryTextColor"
            android:textStyle="bold"
            app:backgroundTint="@color/primaryColor"
            app:cornerRadius="18sp"
            app:layout_constraintEnd_toEndOf="@+id/textField"
            app:layout_constraintStart_toStartOf="@+id/textField"
            app:layout_constraintTop_toBottomOf="@+id/textField"
            app:rippleColor="@color/primaryLightColor" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/sing_up_with"
            android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/btnLogIn"
            app:layout_constraintStart_toStartOf="@+id/btnLogIn"
            app:layout_constraintTop_toBottomOf="@+id/btnLogIn" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="@+id/materialTextView"
            app:layout_constraintStart_toStartOf="@+id/materialTextView"
            app:layout_constraintTop_toBottomOf="@+id/materialTextView">

            <androidx.cardview.widget.CardView
                android:layout_margin="16dp"
                app:cardElevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:id="@+id/fabFacebook"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/ic_facebook"
                    android:contentDescription="@string/app_name" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="16dp"
                app:cardElevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:id="@+id/fabInstagram"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/ic_instagram"
                    android:contentDescription="@string/app_name" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="16dp"
                app:cardElevation="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:id="@+id/fabGoogle"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/ic_google"
                    android:contentDescription="@string/app_name" />
            </androidx.cardview.widget.CardView>

            <!-- OLD FAB WITH OUT  ICON TINT TRANSPARENCY -->
            <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                app:backgroundTint="@color/secondaryTextColor"
                app:fabSize="mini"
                app:rippleColor="@color/primaryLightColor"
                app:srcCompat="@drawable/ic_google"
                app:tint="none"
                app:useCompatPadding="true" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/don_t_have_an_account"
                android:textAllCaps="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/sing_in"
                android:textAllCaps="true"
                android:textColor="@color/primaryColor"
                android:textSize="12sp" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="64dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:textColor="@color/primaryColor"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>