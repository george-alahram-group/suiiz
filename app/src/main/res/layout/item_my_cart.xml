<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginVertical="@dimen/_5sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryTextColor">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dip"
                app:cardCornerRadius="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cards_bg_color"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/ivImage"
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="@dimen/_85sdp"
                            android:scaleType="centerCrop"
                            android:src="@android:drawable/progress_indeterminate_horizontal"
                            app:riv_corner_radius="@dimen/_10sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CYLINDER HEAD 2012"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/tvPartType"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:clickable="false"
                                        android:text="parts"
                                        android:textColor="@color/primaryTextColor"
                                        android:textSize="@dimen/_8sdp"
                                        app:backgroundTint="@color/cards_bg_color"
                                        app:cornerRadius="@dimen/_50sdp"
                                        app:elevation="0dp"
                                        app:strokeColor="@color/primaryTextColor"
                                        app:strokeWidth="1dip" />

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/tvPrice"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:clickable="false"
                                        android:textColor="@color/primaryTextColor"
                                        android:textSize="@dimen/_8sdp"
                                        app:backgroundTint="@color/cards_bg_color"
                                        app:cornerRadius="@dimen/_50sdp"
                                        app:elevation="0dp"
                                        app:strokeColor="@color/primaryTextColor"
                                        app:strokeWidth="1dip"
                                        tools:text="250 LE" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:id="@+id/btnMinus"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="?android:attr/selectableItemBackgroundBorderless"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:src="@drawable/ic_minus"
                                            app:tint="@color/primaryColor" />

                                        <TextView
                                            android:id="@+id/tvCount"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:text="1"
                                            android:textAlignment="gravity"
                                            android:textColor="@color/primaryTextColor"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                        <com.google.android.material.imageview.ShapeableImageView
                                            android:id="@+id/btnPlus"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="?android:attr/selectableItemBackgroundBorderless"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:src="@drawable/ic_plus"
                                            app:tint="@color/primaryColor" />

                                    </LinearLayout>

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/tvAdOwner"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_30sdp"
                                        android:textColor="@color/primaryTextColor"
                                        android:textSize="@dimen/_6sdp"
                                        app:backgroundTint="@color/primaryColor"
                                        app:cornerRadius="@dimen/_50sdp"
                                        app:elevation="0dp"
                                        tools:text="MANSOUR PLUS" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>