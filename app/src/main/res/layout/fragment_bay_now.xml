<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.BayNowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="?actionBarSize"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:clipToPadding="false"
            app:cardBackgroundColor="@color/primaryTextColor"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_1sdp"
                android:background="@color/cards_bg_color"
                android:baselineAligned="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFavoriteDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="start"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:text="YESTERDAY 8 PM"
                    android:textAlignment="gravity"
                    android:textColor="@color/primaryTextColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/_10sdp"
                    tools:ignore="NestedWeights">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_arrow_left"
                        app:tint="@color/primaryTextColor" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_165sdp"
                        android:layout_weight="1"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/dicount_background"
                                android:paddingHorizontal="@dimen/_15sdp"
                                android:paddingVertical="@dimen/_5sdp"
                                android:text="-35%"
                                android:textColor="@color/primaryTextColor"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.viewpager2.widget.ViewPager2
                                android:id="@+id/vp2ProductImages"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/btnNext"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="@color/primaryTextColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_rv_products_images" />

                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/ic_youtube"
                        app:tint="@color/primaryTextColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    tools:ignore="NestedWeights,RtlSymmetry">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="CELINDER HEAD 2012"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/btnFavorite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:contentDescription="@string/app_name"
                                android:focusable="true"
                                android:src="@drawable/ic_favorite_off"
                                app:tint="@color/primaryTextColor" />

                            <ImageView
                                android:id="@+id/btnShare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:contentDescription="@string/app_name"
                                android:focusable="true"
                                android:src="@drawable/ic_share"
                                app:tint="@color/primaryTextColor" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/primaryTextColor"
                            app:cardCornerRadius="@dimen/_50sdp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/_3sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:alpha="0.7"
                                    android:foreground="@drawable/line"
                                    android:foregroundTint="@color/secondaryTextColor"
                                    android:text="2500 LE"
                                    android:textColor="@color/secondaryTextColor"
                                    android:textSize="@dimen/_8sdp" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_5sdp"
                                    android:text="2000LE"
                                    android:textColor="@color/secondaryTextColor"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="@dimen/_7sdp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/primaryTextColor"
                            app:cardCornerRadius="@dimen/_50sdp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/_3sdp">

                                <ImageView
                                    android:id="@+id/btnMinus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:background="?android:attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:contentDescription="@string/app_name"
                                    android:focusable="true"
                                    android:src="@drawable/ic_minus"
                                    app:tint="@color/primaryColor" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:text="1"
                                    android:textColor="@color/secondaryTextColor"
                                    android:textSize="@dimen/_16sdp" />

                                <ImageView
                                    android:id="@+id/btnPlus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:background="?android:attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:contentDescription="@string/app_name"
                                    android:focusable="true"
                                    android:src="@drawable/ic_plus"
                                    app:tint="@color/primaryColor" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/primaryTextColor" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="AD LOCATION"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/tvAdLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CAIRO - EGYPT"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@color/primaryTextColor"
                        android:alpha="0.5"
                        android:layout_marginHorizontal="@dimen/_15sdp" />

                    <LinearLayout
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="TYPE"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INTERNAL"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@color/primaryTextColor"
                        android:alpha="0.5"
                        android:layout_marginHorizontal="@dimen/_15sdp" />

                    <LinearLayout
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="CONDITION"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/tvCondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NEW"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@color/primaryTextColor"
                        android:alpha="0.5"
                        android:layout_marginHorizontal="@dimen/_15sdp" />

                    <LinearLayout
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="STATUS"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ORIGINAL"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@color/primaryTextColor"
                        android:alpha="0.5"
                        android:layout_marginHorizontal="@dimen/_15sdp" />

                    <LinearLayout
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="VEHICLE"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/tvVehicle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CAR"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@color/primaryTextColor"
                        android:alpha="0.5"
                        android:layout_marginHorizontal="@dimen/_15sdp" />

                    <LinearLayout
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="BRAND"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/tvBrand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BMW"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@color/primaryTextColor"
                        android:alpha="0.5"
                        android:layout_marginHorizontal="@dimen/_15sdp" />

                    <LinearLayout
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="MODEL"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/tvModel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 SREIES"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@color/primaryTextColor"
                        android:alpha="0.5"
                        android:layout_marginHorizontal="@dimen/_15sdp" />

                    <LinearLayout
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="YEAR"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/tvYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2012"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="@color/primaryTextColor"
                        android:alpha="0.5"
                        android:layout_marginHorizontal="@dimen/_15sdp" />

                    <LinearLayout
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DESCRIPTION : "
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lorem"
                            android:alpha="0.75"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:cardBackgroundColor="@color/primaryTextColor"
            app:cardCornerRadius="@dimen/_50sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:paddingHorizontal="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/egypt"
                    app:riv_corner_radius="@dimen/_50sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="BY MANSOUR PLUS"
                    android:textStyle="bold"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginVertical="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:cardBackgroundColor="@color/primaryColor"
            app:cardCornerRadius="@dimen/_50sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:paddingHorizontal="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    app:tint="@color/primaryTextColor"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_chat"
                    app:riv_corner_radius="@dimen/_50sdp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text="SEND MESSAGE"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/includeFooter"
            layout="@layout/include_vehicle_cars_parts_footer"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>