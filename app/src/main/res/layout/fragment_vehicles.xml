<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.VehiclesFragment">

    <com.asksira.loopingviewpager.LoopingViewPager
        android:id="@+id/loopingVP"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:clipToPadding="false"
        app:isInfinite="true"
        app:autoScroll="true"
        app:scrollInterval="5000"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loopingVP"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false"
        android:paddingBottom="?attr/actionBarSize"
        tools:listitem="@layout/item_service_rv" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loopingVP"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false"
        app:lottie_loop="true"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/searching"
        android:layout_margin="@dimen/_35sdp"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_work"
        android:layout_marginBottom="?attr/actionBarSize"
        style="@style/fabDesign"
        android:contentDescription="@string/app_name" />

</RelativeLayout>