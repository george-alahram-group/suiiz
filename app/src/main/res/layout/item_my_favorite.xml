<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:clipToPadding="false"
        app:cardBackgroundColor="@color/primaryTextColor_alpha"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:clipToPadding="false"
            app:cardBackgroundColor="@color/cards_bg_color"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        tools:ignore="NestedWeights">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            app:cardCornerRadius="@dimen/_15sdp"
                            app:cardElevation="0dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/ivPart"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:src="@drawable/bmw" />

                                <ImageView
                                    android:id="@+id/isFavorite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_10sdp"
                                    android:background="?android:attr/selectableItemBackgroundBorderless"
                                    android:backgroundTint="@color/primaryColor"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:src="@drawable/ic_favorite"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/ivPart"
                                    app:tint="@color/red" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardBackgroundColor="@color/primaryTextColor_alpha"
                            app:cardCornerRadius="@dimen/_50sdp"
                            app:cardElevation="0dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="1dip"
                                app:cardBackgroundColor="@color/cards_bg_color"
                                app:cardCornerRadius="@dimen/_50sdp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_3sdp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:alpha=".75"
                                        android:src="@drawable/ic_location"
                                        app:tint="@color/primaryTextColor" />

                                    <TextView
                                        android:id="@+id/tvLocation"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:text="CAIOR _ EGYPT"
                                        android:textAlignment="gravity"
                                        android:textColor="@color/primaryTextColor" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        tools:ignore="NestedWeights">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="CELINDER HEAD 2012"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Google's free services instantly translates words, pharases"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/ivVideoURL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:alpha=".75"
                                android:background="?android:attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:src="@drawable/ic_youtube"
                                app:tint="@color/primaryTextColor" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <RatingBar
                                android:id="@+id/rate"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:progressTint="@android:color/holo_orange_light"
                                android:rating="4" />

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/primaryTextColor_alpha"
                            app:cardCornerRadius="@dimen/_50sdp"
                            app:cardElevation="0dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="1dip"
                                app:cardBackgroundColor="@color/cards_bg_color"
                                app:cardCornerRadius="@dimen/_50sdp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_3sdp">

                                    <TextView
                                        android:id="@+id/tvPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:gravity="center_vertical"
                                        android:text="2000LE"
                                        android:textStyle="bold"
                                        android:textAlignment="gravity"
                                        android:textColor="@color/primaryTextColor"
                                        android:textSize="@dimen/_11sdp" />

                                    <TextView
                                        android:id="@+id/tvPriceBefore"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:foreground="@drawable/line"
                                        android:gravity="center_vertical"
                                        android:text="2500 LE"
                                        android:textAlignment="gravity"
                                        android:textColor="@color/primaryTextColor"
                                        android:textSize="@dimen/_8sdp" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/primaryTextColor_alpha"
                            app:cardCornerRadius="@dimen/_50sdp"
                            app:cardElevation="0dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="1dip"
                                app:cardBackgroundColor="@color/cards_bg_color"
                                app:cardCornerRadius="@dimen/_50sdp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/_3sdp">

                                    <TextView
                                        android:id="@+id/tvAdOwner"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:text="AD BY MANSOUR PLUS"
                                        android:textAlignment="gravity"
                                        android:textColor="@color/primaryTextColor"
                                        android:textSize="@dimen/_9sdp" />
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvFavoriteDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:text="YESTERDAY 8 PM"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/primaryColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/bottom_app_bar_bg_top_secondary"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btnAddToCart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:alpha=".75"
                            android:src="@drawable/ic_shopping_cart"
                            app:tint="@color/primaryTextColor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="ADD TO CART"
                            android:textAlignment="gravity"
                            android:textColor="@color/primaryTextColor" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:alpha=".5"
                        android:background="@color/primaryTextColor" />

                    <LinearLayout
                        android:id="@+id/btnCallNow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:alpha=".75"
                            android:src="@drawable/ic_call"
                            app:tint="@color/primaryTextColor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="CALL NOW"
                            android:textAlignment="gravity"
                            android:textColor="@color/primaryTextColor" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</LinearLayout>